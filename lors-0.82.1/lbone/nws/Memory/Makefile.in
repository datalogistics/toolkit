# System-dependent values determined by the configuration script.
AR          = @AR@
C_FLAGS     = @C_FLAGS@
CC          = @CC@
JAVA_VERSION= @JAVA_VERSION@
LD_FLAGS    = @LD_FLAGS@
OBJECT_DIR  = @OBJECT_DIR@
PROFILE     = @PROFILE@
PURIFY      = @PURIFY@
RANLIB      = @RANLIB@
ROOT_DIR    = @ROOT_DIR@
VERSION     = @VERSION@
INCLUDE_DIR	= @INCLUDE_DIR@

DIST_NAME = NWS-$(VERSION)
DIST_ROOT = $(ROOT_DIR)/$(DIST_NAME)
LIBRARY   = $(ROOT_DIR)/libnws.a

prefix 		= @prefix@
exec_prefix	= @exec_prefix@
bindir		= @bindir@
libdir		= @libdir@
includedir	= @includedir@

# Compilation rules for C.
.c.o:
	@ if test -z "$(<D)" -o "$(<D)" = "." -o "$(<D)" = "./"; then \
	    echo $(CC) -c $(C_FLAGS) -I$(ROOT_DIR)/Include $(X_INCLUDE) -o $@ $<; \
	    $(CC) -c $(C_FLAGS) -I$(ROOT_DIR)/Include $(X_INCLUDE) -o $@ $<; \
	  else \
	    cd $(@D); $(MAKE) $(@F); \
	  fi

# Link procedure.
LD = $(CC)

OBJECTS  = nws_state.o nws_cache.o
PROGRAMS = nws_memory
nws_memory_DEPENDENCIES = nws_state.o \
			  nws_cache.o \
                          ../Nameserver/register.o \
                          ../Protocol/host_protocol.o \
                          ../Protocol/messages.o \
                          ../Protocol/protocol.o \
                          ../Utility/diagnostic.o \
                          ../Utility/dnsutil.o \
                          ../Utility/formatutil.o \
                          ../Utility/osutil.o \
                          ../Utility/strutil.o \
			  ../Forecaster/fbuff.o

all: $(OBJECTS) $(PROGRAMS)

clean:
	rm -f *.o $(PROGRAMS) 

distclean: clean
	rm -f *.o $(PROGRAMS) Makefile

dist:
	mkdir $(DIST_ROOT)/Memory
	cp Makefile.in *.c $(DIST_ROOT)/Memory

install: $(PROGRAMS)
	if test ! -d $(bindir); then mkdir $(bindir); fi
	cp $(PROGRAMS) $(bindir)

lib: $(OBJECTS)
	$(AR) cr $(LIBRARY) $(OBJECTS)

pure:
	$(MAKE) LD="$(PURIFY) $(LD)"

nws_memory: nws_memory.o $(nws_memory_DEPENDENCIES)
	$(LD) -o nws_memory nws_memory.o $(nws_memory_DEPENDENCIES) $(LD_FLAGS)
